{% comment %}
  Product Carousel Section
  Displays products in a horizontal scrolling carousel
{% endcomment %}

<section class="py-24 bg-brand-charcoal relative overflow-hidden" style="background: {{ section.settings.background_color }};">
  
  <div class="absolute top-0 left-0 w-full h-full bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')] opacity-5"></div>
  <div class="absolute -top-40 -right-40 w-96 h-96 bg-brand-red/10 rounded-full blur-[100px]"></div>

  <div class="container mx-auto px-6 relative z-10">
    
    <div class="flex items-end justify-between mb-16">
      <div>
        {% if section.settings.heading != blank %}
          <h2 class="font-display text-5xl md:text-6xl uppercase text-white mb-2">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="text-neutral-400">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>

      <div class="flex gap-2">
        <button 
          data-carousel-left
          class="p-3 border border-white/10 rounded-full hover:bg-white hover:text-black transition-all"
          aria-label="Previous"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m15 18-6-6 6-6"></path>
          </svg>
        </button>
        <button 
          data-carousel-right
          class="p-3 border border-white/10 rounded-full hover:bg-white hover:text-black transition-all"
          aria-label="Next"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </button>
      </div>
    </div>

    <div 
      data-product-carousel
      class="relative"
    >
      <div 
        data-carousel-scroll
        class="flex gap-8 overflow-x-auto pb-12 scrollbar-hide snap-x snap-mandatory"
        style="scrollbar-width: none; -ms-overflow-style: none;"
      >
        {% if section.settings.collection != blank %}
          {% assign products_to_show = section.settings.limit | default: 8 %}
          {% for product in section.settings.collection.products limit: products_to_show %}
            {% render 'product-card', 
              product: product, 
              show_vendor: section.settings.show_vendor,
              show_quick_add: section.settings.show_quick_add
            %}
          {% endfor %}
        {% else %}
          {% for product in collections.all.products limit: 8 %}
            {% render 'product-card', 
              product: product, 
              show_vendor: section.settings.show_vendor,
              show_quick_add: section.settings.show_quick_add
            %}
          {% endfor %}
        {% endif %}
      </div>
    </div>

    {% if section.settings.show_view_all and section.settings.collection != blank %}
      <div class="text-center mt-12">
        <a 
          href="{{ section.settings.collection.url }}"
          class="inline-flex items-center gap-2 px-8 py-4 bg-brand-red text-white font-bold uppercase tracking-widest hover:bg-red-700 transition rounded-sm"
        >
          View All Products
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Product Carousel",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#121212"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gear"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Elite performance wear."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Leave empty to show all products"
    },
    {
      "type": "range",
      "id": "limit",
      "min": 4,
      "max": 20,
      "step": 2,
      "label": "Number of Products",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Vendor/Brand",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "Show Quick Add Button",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Product Carousel",
      "settings": {
        "heading": "The Gear",
        "subheading": "Elite performance wear."
      }
    }
  ]
}
{% endschema %}
