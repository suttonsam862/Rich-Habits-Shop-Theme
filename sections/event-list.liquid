{% comment %}
  Event List Section
  Displays upcoming events with customizable blocks
{% endcomment %}

<section class="py-24 bg-brand-black relative border-t border-white/5">
  <div class="container mx-auto px-6">
    
    <div class="mb-12 flex items-end justify-between">
      {% if section.settings.heading != blank %}
        <h2 class="font-display text-5xl md:text-6xl uppercase text-white">
          {{ section.settings.heading | newline_to_br }}
        </h2>
      {% endif %}
      
      {% if section.settings.show_view_all and section.settings.view_all_link != blank %}
        <a 
          href="{{ section.settings.view_all_link }}"
          class="hidden md:flex items-center gap-2 text-white hover:text-brand-red transition-colors uppercase font-bold tracking-widest text-sm"
        >
          View All Events 
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      {% endif %}
    </div>

    {% if section.blocks.size > 0 %}
      <div class="flex flex-col">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'event' %}
              <div 
                class="group flex flex-col md:flex-row items-center justify-between border-b border-white/10 py-8 hover:bg-white/5 transition-colors px-4"
                {{ block.shopify_attributes }}
              >
                
                <div class="w-full md:w-1/6 mb-4 md:mb-0">
                  <div class="flex items-center gap-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-brand-red">
                      <path d="M8 2v4"></path>
                      <path d="M16 2v4"></path>
                      <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                      <path d="M3 10h18"></path>
                    </svg>
                    {% if block.settings.date != blank %}
                      <span class="font-display text-3xl text-white tracking-wide">
                        {{ block.settings.date }}
                      </span>
                    {% endif %}
                  </div>
                </div>

                <div class="w-full md:w-3/6 mb-4 md:mb-0 flex flex-col justify-center">
                  {% if block.settings.type != blank %}
                    <span class="text-xs font-bold text-brand-red uppercase tracking-widest mb-1">
                      {{ block.settings.type }}
                    </span>
                  {% endif %}
                  
                  {% if block.settings.title != blank %}
                    <h3 class="font-sans font-bold text-xl text-white">
                      {{ block.settings.title }}
                    </h3>
                  {% endif %}
                  
                  {% if block.settings.location != blank %}
                    <div class="flex items-center gap-2 text-neutral-500 mt-1">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                      </svg>
                      <span class="text-sm">{{ block.settings.location }}</span>
                    </div>
                  {% endif %}
                </div>

                <div class="w-full md:w-2/6 flex justify-start md:justify-end">
                  {% if block.settings.cta_link != blank %}
                    <a 
                      href="{{ block.settings.cta_link }}"
                      class="px-6 py-3 border border-white/20 text-white uppercase font-bold text-xs tracking-widest hover:bg-white hover:text-black transition-all w-full md:w-auto text-center"
                    >
                      {{ block.settings.cta_text | default: 'Register Now' }}
                    </a>
                  {% endif %}
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% else %}
      <div class="text-center py-12 text-neutral-500">
        <p>Add event blocks to display events</p>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Event List",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Upcoming\nBattles",
      "info": "Use line breaks to separate text on different lines"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All Link"
    }
  ],
  "blocks": [
    {
      "type": "event",
      "name": "Event",
      "settings": [
        {
          "type": "text",
          "id": "date",
          "label": "Date",
          "default": "OCT 15",
          "info": "Short format (e.g., OCT 15)"
        },
        {
          "type": "text",
          "id": "type",
          "label": "Event Type",
          "default": "Tournament"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Event Title",
          "default": "Championship Tournament"
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location",
          "default": "City, State"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "Button Text",
          "default": "Register Now"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Event List",
      "blocks": [
        {
          "type": "event",
          "settings": {
            "date": "OCT 15",
            "type": "Camp",
            "title": "Panther Train Tour",
            "location": "Denver, CO"
          }
        },
        {
          "type": "event",
          "settings": {
            "date": "NOV 02",
            "type": "Tournament",
            "title": "Winter Takedown Challenge",
            "location": "State College, PA"
          }
        }
      ]
    }
  ]
}
{% endschema %}
