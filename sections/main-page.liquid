{% comment %}
  Main Page Section
  Generic page template
{% endcomment %}

<div class="container mx-auto px-6 py-16">
  <div class="max-w-4xl mx-auto">
    <h1 class="font-display text-5xl md:text-6xl uppercase text-white mb-8">
      {{ page.title }}
    </h1>

    {% if page.content != blank %}
      <div class="prose prose-invert prose-lg max-w-none">
        {{ page.content }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Page",
  "settings": []
}
{% endschema %}
